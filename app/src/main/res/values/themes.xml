<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.UsersList.NoActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/status</item>
        <item name="android:windowBackground">@color/bg_blue</item>

        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here -->

        <!-- Text config -->
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/text_body</item>

        <!-- Config -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

</resources>